---
const { frontmatter, url } = Astro.props;
const title = frontmatter.title;
const tags = frontmatter.tags;
const englishDate = frontmatter.pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<li>
  <a href={url} class="text-base text-penn-red hover:underline" title={title}>{title}</a>
  {
    tags &&
      tags.map((tag) => (
        <span class="inline-block text-neutral-400 text-xs px-1">
          <a href={`/tags/${tag}`} class="hover:underline">
            #{tag}
          </a>
        </span>
      ))
  }
</li>
